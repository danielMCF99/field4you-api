          },
          "location": {
            "type": "string",
            "example": "Barcelos, Braga, Portugal"
          },
          "sportsVenueType": {
            "type": "string",
            "example": "11x11",
            "enum": ["5x5", "7x7", "9x9", "11x11"]
          },
          "status": {
            "type": "string",
            "example": "active",
            "enum": ["active", "inactive"]
          },
          "sportsVenueName": {
            "type": "string",
            "example": "City Sports Arena"
          },
          "bookingMinDuration": {
            "type": "number",
            "format": "int32",
            "example": 60
          },
          "bookingMinPrice": {
            "type": "number",
            "format": "int32",
            "example": 25
          },
          "sportsVenuePicture": {
            "type": "string",
            "format": "binary",
