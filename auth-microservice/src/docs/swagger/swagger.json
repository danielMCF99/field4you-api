{
  "openapi": "3.0.0",
  "info": {
    "title": "Authentication API Documentation",
    "version": "1.0.0",
    "description": "Authentication API Information"
  },
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register a new user",
        "description": "Creates a new user in the system and generates a JWT token.",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userType": { "type": "string", "example": "admin" },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@example.com"
                  },
                  "password": { "type": "string", "example": "P@ssw0rd!" },
                  "firstName": { "type": "string", "example": "John" },
                  "lastName": { "type": "string", "example": "Doe" },
                  "birthDate": {
                    "type": "string",
                    "format": "date",
                    "example": "1990-01-01"
                  },
                  "district": { "type": "string", "example": "Braga" },
                  "city": { "type": "string", "example": "Barcelos" },
                  "address": {
                    "type": "string",
                    "example": "Rua David Barbosa"
                  }
                },
                "required": [
                  "userType",
                  "email",
                  "password",
                  "firstName",
                  "lastName",
                  "birthDate",
                  "district",
                  "city",
                  "address"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully registered the user."
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Duplicate email.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Given email is already being used"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error during user registration.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Something went wrong for new user registration"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login a user",
        "description": "Authenticate a user with email and password, and generate a JWT token upon successful login.",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@example.com"
                  },
                  "password": { "type": "string", "example": "P@ssw0rd!" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful, JWT token returned.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login was successful."
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request, missing or invalid email/password.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Email and Password are required"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized, invalid credentials.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid password"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found with the given email.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "User not found" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error during login.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Something went wrong"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/password-recovery": {
      "post": {
        "summary": "Password Recovery",
        "description": "Initiates the password recovery process for a user by sending a recovery email with a reset link.",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@example.com"
                  }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password recovery email sent successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully sent email for password recovery to user"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request, email field is missing.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Email is required"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User with the given email not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User with given email not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error during password recovery process.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Something went wrong with password recovery mechanism"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/reset-password/{token}": {
      "put": {
        "summary": "Password Reset",
        "description": "Allows a user to reset their password using a password reset token.",
        "tags": ["Auth"],
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "description": "The password reset token provided to the user via email.",
            "schema": {
              "type": "string",
              "example": "a1b2c3d4e5f6g7h8"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "example": "newSecurePassword123!"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset successful.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Password reset successful"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request, required fields are missing.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Email and Password are required"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized, token is invalid or expired.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid information sent for given user to reset password"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User with the provided email not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User with given email not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error during password reset.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Something went wrong with password reset"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/active-users": {
      "get": {
        "summary": "Get active users statistics",
        "description": "Returns statistics about user activity in the last 30 days, including comparison with the previous 30-day period and a daily breakdown.",
        "tags": ["Auth"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved active user statistics.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "currentMonthActiveUsers": {
                      "type": "number",
                      "minimum": 0,
                      "example": 230,
                      "description": "Number of users who accessed the system in the last 30 days."
                    },
                    "previousMonthActiveUsers": {
                      "type": "number",
                      "minimum": 0,
                      "example": 180,
                      "description": "Number of users who accessed the system in the 30 days prior to the current period."
                    },
                    "percentageDifference": {
                      "type": "number",
                      "example": 27.78,
                      "description": "Percentage change in active users compared to the previous 30-day period."
                    },
                    "dailyActiveUsers": {
                      "type": "array",
                      "description": "Daily breakdown of active users in the last 30 days.",
                      "items": {
                        "type": "object",
                        "properties": {
                          "date": {
                            "type": "string",
                            "format": "date",
                            "example": "2025-05-01",
                            "description": "Date in YYYY-MM-DD format."
                          },
                          "count": {
                            "type": "number",
                            "minimum": 0,
                            "example": 12,
                            "description": "Number of users who accessed the system on this date."
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error while retrieving active user statistics."
          }
        }
      }
    }
  }
}
